{% comment %}
  --- Recommendation result rendered dynamically after recommendation Ajax API called. ---
    See https://shopify.dev/docs/themes/product-merchandising/recommendations/related-products
{% endcomment %}
<fieldset>
  <legend>You may also like</legend>
  <!-- Product thumbnails -->
  {% comment %}
    See https://shopify.dev/docs/api/liquid/objects/recommendations
  {% endcomment %}
  <div style="overflow: hidden; margin: 0 auto;">
    {% for product in recommendations.products %}
      <div style="float: left; width: 30%;">
        <fieldset>
          <legend>{{ product.title }}</legend>
          <div>
            <a href="{{ product.url }}">
              {% if product.images != empty %}
                {{ product | image_url: width: 50 | image_tag: height: 50 }}
              {% else %}
                <img alt="No image" src="" width="50" height="50" loading="lazy">
              {% endif %}
            </a>
          </div>
        </fieldset>
      </div>
    {% endfor %}
  </div>
  <div style="float: none;"></div>
  <div>
    <p>
      ðŸ‘‰
      <a href="https://shopify.dev/docs/themes/product-merchandising/recommendations" target="_blank">Dev. doc</a>
    </p>
  </div>
</fieldset>
