{% comment %}
  *** Home page ***
  See https://shopify.dev/docs/themes/architecture/templates/index-template
{% endcomment %}
<div class="my_section my_home">
  <!-- Home page section -->
  {% render 'section_title' %}

  <h2>{{ section.settings.my_title }}</h2>

  {% comment %}
    This message is localized defined in 'locales/en.default.json' and other locale files.
    See https://shopify.dev/docs/themes/architecture/locales
  {% endcomment %}
  <p>ðŸ‘€ {{ 'sections.home_page.message' | t }}</p>

  <!-- Rendering blocks -->
  {% for block in section.blocks %}
    <div class="my_block">
      <div class="my_block_title">Block ({% increment i %})</div>

      {% case block.type %}
        {% when 'my_type_1' %}
          <!-- Collection link -->
          <p>
            <a href="{{ block.settings.my_collection.url }}">My collection: {{ block.settings.my_collection.title }}</a>
          </p>

        {% when 'my_type_2' %}
          <!-- Product link -->
          <p>
            <a href="{{ block.settings.my_product.url }}">My product: {{ block.settings.my_product.title }}</a>
          </p>

        {% when 'my_type_3' %}
          <!-- URL link -->
          <p>
            <a href="{{ block.settings.my_url.url }}">My URL: {{ block.settings.my_url.url }}</a>
          </p>
      {% endcase %}
    </div>
  {% endfor %}

  <p>ðŸ‘‰ <a href="https://shopify.dev/docs/themes/architecture/templates/index-template" target="_blank">Dev. doc</a></p>
</div>

{% schema %}
{
  "name": "t:sections.home_page.name",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "my_title",
      "label": "Home page title",
      "default": "THIS IS MY HOME PAGE"
    }
  ],
  "max_blocks": 5,
  "blocks": [
    {
      "name": "My Collection",
      "type": "my_type_1",
      "settings": [
        {
          "type": "collection",
          "id": "my_collection",
          "label": "My Collection"
        }
      ]
    },
    {
      "name": "My Product",
      "type": "my_type_2",
      "settings": [
        {
          "type": "product",
          "id": "my_product",
          "label": "My Product"
        }
      ]
    },
    {
      "name": "My URL",
      "type": "my_type_3",
      "settings": [
        {
          "type": "url",
          "id": "my_url",
          "label": "My URL",
          "default": "/collections",
          "info": "Choose a URL to point all collections, etc."
        }
      ]
    }
  ],
  "enabled_on": {
    "templates": ["index"]
  }
}
{% endschema %}
