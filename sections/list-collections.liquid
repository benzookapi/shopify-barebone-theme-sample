{% comment %}
  *** Collection list page ***
  See https://shopify.dev/docs/themes/architecture/templates/list-collections
{% endcomment %}
<div class="my_section my_list-collection">
  <!-- Collection list section -->
  {% render 'section_title' %}

  <h2>{{ section.settings.my_title }}</h2>

  <!-- Collection list -->
  {% comment %}
    See https://shopify.dev/docs/api/liquid/objects/collections
  {% endcomment %}
  <div class="my_list">
    <table>
      {% for collection in collections %}
        <tr>
          <td style="text-align: center; border: none;">
            {% if collection.image != null %}
              {{ collection.image | image_url: width: 50 | image_tag: height: 50 }}
            {% else %}
              <img alt="No image" src="" width="50" height="50" loading="lazy">
            {% endif %}
          </td>
          <td style="border: none;">
            <p>
              <a href="{{ collection.url }}">
                {{ collection.title }}
              </a>
              (product count: {{ collection.all_products_count }})
            </p>
          </td>
        </tr>
      {% endfor %}
    </table>
  </div>

  {% render 'home' %}

  <p>
    ðŸ‘‰ <a href="https://shopify.dev/docs/themes/architecture/templates/list-collections" target="_blank">Dev. doc</a>
  </p>
</div>

{% schema %}
{
  "name": "t:sections.list_collection.name",
  "limit": 1,
  "settings": [
    {
      "type": "text",
      "id": "my_title",
      "label": "Collection list title",
      "default": "THIS IS MY COLLECTION LIST"
    }
  ],
  "enabled_on": {
    "templates": ["list-collections", "index", "product", "collection", "search"]
  },
  "presets": [
    {
      "name": "t:sections.list_collection.name"
    }
  ]
}
{% endschema %}
