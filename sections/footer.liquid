<div class="my_section my_footer">
  <div class="my_block_title">Section</div>

  <h3>{{ section.settings.title }}</h3>

  {% for block in section.blocks %}
    <div class="my_block">
      <div class="my_block_title">Block ({% increment i %})</div>

      {% case block.type %}
        {% when 'my_type_1' %}
          <p>
            <a href="{{ block.settings.my_page.url }}">My page: {{ block.settings.my_page.title }}</a>
          </p>
        {% when 'my_type_2' %}
          <p>
            <a href="{{ block.settings.my_article.url }}">My Article: {{ block.settings.my_article.title }}</a>
          </p>
      {% endcase %}
    </div>
  {% endfor %}

  <p>Â© benzookapi</p>
</div>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Footer Title",
      "default": "THIS IS MY FOOTER"
    }
  ],
  "blocks": [
    {
      "name": "My Page",
      "type": "my_type_1",
      "settings": [
        {
          "type": "page",
          "id": "my_page",
          "label": "My Page"
        }
      ]
    },
    {
      "name": "My Article",
      "type": "my_type_2",
      "settings": [
        {
          "type": "article",
          "id": "my_article",
          "label": "My Article"
        }
      ]
    }
  ],
  "enabled_on": {
    "groups": ["footer"]
  },
  "max_blocks": 2
}
{% endschema %}
