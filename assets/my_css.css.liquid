/* 
  Global CSS included by layout/theme.liquid
  Section local CSS should be defined in each section Liquid.
*/
.my_layout {
  margin-left: 1%;
  margin-right: 1%;
}

.my_section {
  text-align: center;
  border: solid #dddddd;
  margin: 0 0 1em 0;
}

.my_block {
  border: solid #cccccc;
  margin: 0 1em 1em 1em;
  background-color: #ffffff;
}

.my_block_header {
  height: 110px;
  width: 200px;
}

.my_block_title {
  text-align: left;
  font-weight: bold;
}

.my_top_space {
  margin-top: 1em;
}

.my_right_space {
  margin-right: 1em;
}

.my_bottom_space {
  margin-bottom: 1em;
}

.my_left_space {
  margin-left: 1em;
}

.my_font_large {
  font-size: x-large;
}

table {
  margin: 0 auto;
  width: 100%;
}

table,
th,
td {
  border: 1px solid #000000;
  border-collapse: collapse;
}

th,
td {
  background-color: #ffffff;
}

.my_header {
  background-color: #d5eef8;
}

.my_footer {
  background-color: #d5f8eb;
}

.my_home {
  background-color: #f8f5d5;
}

.my_collection {
  background-color: #f8e0d5;
}

.my_list-collection {
  background-color: #f8d5d6;
}

.my_product {
  background-color: #f5d5f8;
}

.my_cart {
  background-color: #e4cdbc;
}

.my_article {
  background-color: #d6d9da;
}

.my_blog {
  background-color: #b0b2b2;
}

.my_page {
  background-color: #f7f0f0;
}

.my_account {
  background-color: #ffffff;
}

.my_search {
  background-color: #f6e2f4;
}

.my_content {
  width: 80%;
  background-color: #ffffff;
  margin: 0 auto;
}

.my_result {
  width: 95%;
  background-color: #ffffff;
  margin: 0 auto;
}

.my_list {
  width: 80%;
  background-color: #ffffff;
  text-align: left;
  margin: 0 auto;
}

.my_gift_card {
  padding-left: 46%;
}

.my_company {
  background-color: #d4f6c7;
}